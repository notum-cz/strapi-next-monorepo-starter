{
  "name": "@repo/strapi-types",
  "version": "1.0.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./src/index.ts"
    },
    "./generated/components": {
      "types": "./generated/components.d.ts"
    },
    "./generated/contentTypes": {
      "types": "./generated/contentTypes.d.ts"
    }
  },
  "types": "src/index.ts",
  "scripts": {
    "build": "echo 'Types-only package, no build needed'",
    "dev": "echo 'Types-only package, no dev needed'",
    "lint": "eslint -c ../../eslint.config.mjs './**/*.{js,ts,jsx,tsx,cjs,mjs}'",
    "lint:fix": "pnpm lint --fix",
    "sync-types": "cp -r ../../apps/strapi/types/generated ./generated"
  },
  "devDependencies": {
    "@strapi/strapi": "5.36.0"
  }
}
