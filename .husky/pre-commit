# Load nvm if available and use Node.js version from .nvmrc
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
[ -f .nvmrc ] && command -v nvm > /dev/null 2>&1 && nvm use

