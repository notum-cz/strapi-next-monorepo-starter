# Copilot Configuration
NEXT_PUBLIC_COPILOTKIT_PUBLIC_API_KEY=your_public_key_here
COPILOTKIT_RUNTIME_URL=/api/copilot

# Strapi Configuration
NEXT_PUBLIC_STRAPI_URL=http://localhost:1337
STRAPI_API_TOKEN=your_strapi_admin_token_here
STRAPI_WEBHOOK_SECRET=your_webhook_secret_here

# File Upload Settings
UPLOAD_MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_MAX_FILES_PER_STAGE=50
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/avif,application/pdf,video/mp4,video/webm

# Feature Flags
ENABLE_USER_UPLOADS=true
ENABLE_ADMIN_PANEL=true
REQUIRE_ADMIN_APPROVAL=true

# Markdown Timeline Path
MARKDOWN_TIMELINE_PATH=./public/data/timeline.md

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=
SENTRY_DSN=

# Authentication (Optional - for admin features)
NEXT_PUBLIC_AUTH_ENABLED=false
AUTH_SECRET=your_auth_secret_here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3001
NODE_ENV=development
