{
  "collectionName": "components_utilities_links",
  "info": {
    "displayName": "Link"
  },
  "options": {},
  "attributes": {
    "type": {
      "type": "enumeration",
      "required": true,
      "default": "page",
      "enum": ["external", "page"]
    },
    "label": {
      "type": "string",
      "required": true
    },
    "newTab": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "href": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "external"
          ]
        }
      },
      "required": true
    },
    "page": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::page.page",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "page"
          ]
        }
      }
    },
    "decorations": {
      "type": "component",
      "component": "utilities.link-decorations",
      "repeatable": false
    }
  }
}
