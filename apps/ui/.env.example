# Frontend Configuration (.env.local)

# ============================================
# STRAPI API CONFIGURATION
# ============================================

# Strapi API URL (accessible from Next.js client)
NEXT_PUBLIC_STRAPI_API_URL=http://localhost:1337

# Strapi API Token (for authenticated requests)
# Generate this in Strapi: Settings → API Tokens → Create new token
NEXT_PUBLIC_STRAPI_API_TOKEN=your_strapi_api_token_here

# ============================================
# ISR WEBHOOK CONFIGURATION
# ============================================

# Webhook secret (must match the header in Strapi webhook)
# This is used to verify requests from Strapi webhooks
STRAPI_WEBHOOK_SECRET=your_webhook_secret_here

# Skip webhook verification in development (NOT recommended for production)
# Set to "true" only for local development testing
# SKIP_WEBHOOK_VERIFY=false

# ============================================
# AUTHENTICATION (if using Better Auth)
# ============================================

# Better Auth configuration
NEXT_PUBLIC_AUTH_URL=http://localhost:3000
BETTER_AUTH_SECRET=your_better_auth_secret_here

# ============================================
# ANALYTICS & MONITORING
# ============================================

# Sentry configuration (error tracking)
# SENTRY_ORG=your-org
# SENTRY_PROJECT=your-project
# SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ============================================
# BUILD CONFIGURATION
# ============================================

# Output mode: "standalone" for server, "export" for static
NEXT_OUTPUT=standalone

# ============================================
# DEVELOPMENT
# ============================================

# Enable React Strict Mode
# Helps catch potential bugs during development
# REACT_STRICT_MODE=true

# Enable detailed logging
DEBUG=@repo:*
